{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "if [[ $CLAUDE_FILE_PATHS =~ \\.js$ ]]; then\n    prettier --write $CLAUDE_FILE_PATHS\nelif [[ $CLAUDE_FILE_PATHS =~ \\.py$ ]]; then\n    black $CLAUDE_FILE_PATHS\nfi",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ~/.claude/bash-command-log.txt"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ~/.claude/bash-command-log.txt",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ~/.claude/bash-command-log.txt"
          }
        ]
      }
    ]
  }
}